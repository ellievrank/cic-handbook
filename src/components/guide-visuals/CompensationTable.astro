---
/* src/components/CompensationTable.astro */
---

<div class="table-container not-content">
  <table>
    <thead>
      <tr>
        <th>Date of Offence</th>
        <th>Maximum Award</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>On or after 1 January 2004</td>
        <td><strong>$75,000</strong></td>
      </tr>
      <tr>
        <td>Between 1 July 1991 and 31 December 2003</td>
        <td>$50,000</td>
      </tr>
      <tr>
        <td>Between 1 January 1986 and 30 June 1991</td>
        <td>$20,000</td>
      </tr>
      <tr>
        <td>Between 1 January 1983 and 31 December 1985</td>
        <td>$15,000</td>
      </tr>
      <tr>
        <td>Between 18 October 1976 and 31 December 1982</td>
        <td>$7,500</td>
      </tr>
      <tr>
        <td>Between 22 January 1971 and 17 October 1976</td>
        <td>$2,000</td>
      </tr>
    </tbody>
  </table>
</div>

<style>
  .table-container {
    overflow-x: auto; /* Ensures it scrolls on mobile */
    margin: 1.5rem 0;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    font-size: 0.95rem;
    text-align: left;
  }

  th {
    background-color: #f9fafb;
    color: #1f1f1f;
    font-weight: 700;
    padding: 0.75rem 1rem;
    border-bottom: 2px solid #e5e7eb;
  }

  td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #f3f4f6;
    color: #4b5563;
  }

  /* Zebra striping for readability */
  tr:nth-child(even) {
    background-color: #fafafa;
  }

  /* Highlight the top row (current limit) slightly */
  tr:first-child td {
    background-color: #fff1f2; /* Very faint red tint */
    color: #78081c;
  }
</style>
