---
import "../../styles/global.css";
/* src/components/FeatureCard.astro */
interface Props {
  title: string;
  href: string;
  icon?: string;
}

const { title, href, icon } = Astro.props;
---

<a
  href={href}
  class="group block h-full rounded-xl border border-gray-200 bg-white p-6 text-left no-underline shadow-md transition hover:-translate-y-1 hover:border-[#78081c] hover:shadow-lg"
>
  <div class="flex items-center gap-3 pb-2">
    {icon && <span class={`text-lg ${icon}`} />}
    <h3 class="m-0 text-lg font-extrabold text-[#78081c]">{title}</h3>
  </div>
  <div class="text-sm leading-6 text-gray-600">
    <slot />
  </div>
</a>
