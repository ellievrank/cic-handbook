---
/* src/components/guide-visuals/GuideHero.astro */
import RedButton from "../buttons/RedButton.astro";

const { jurisdiction = "Western Australia" } = Astro.props;
---

<div
  class="not-content relative -mt-24 left-[50%] right-[50%] -ml-[50vw] -mr-[50vw] flex w-screen flex-col items-center bg-gradient-to-b from-rose-50 to-white pt-24 text-center shadow-sm"
>
  <div class="pointer-events-none absolute -right-10 -top-10 text-rose-100/50">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="300"
      height="300"
      viewBox="0 0 24 24"
      fill="currentColor"
      ><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
      ></path></svg
    >
  </div>

  <div
    class="relative z-10 mx-auto mb-12 flex max-w-6xl flex-col items-center px-6"
  >
    <span
      class="mb-4 inline-block rounded-full bg-rose-100 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-rose-800 shadow-sm"
      >Official Toolkit</span
    >
    <h1
      class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 md:text-5xl"
    >
      Criminal Injuries Compensation Guide
      <span class="mt-2 block text-rose-800">{jurisdiction}</span>
    </h1>
    <p class="mb-10 max-w-2xl text-xl leading-relaxed text-gray-600">
      A plain-language guide for potential applicants. Understand your rights,
      the process, and how to apply.
    </p>

    <RedButton href="javascript:window.print()">
      Print / Save as PDF
      <svg
        slot="after"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="ml-2 opacity-80"
        ><path
          d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
        ></path><polyline points="14 2 14 8 20 8"></polyline><path d="M16 13H8"
        ></path><path d="M16 17H8"></path><path d="M10 9H8"></path></svg
      >
    </RedButton>

    <p class="mt-6 text-xs font-medium uppercase tracking-wide text-gray-400">
      Last updated: January 2026
    </p>
  </div>

  <div
    class="w-full bg-[#78081c] py-4 text-center text-sm font-semibold text-white shadow-md md:text-base"
  >
    This page outlines the process of applying for Criminal Injuries
    Compensation.
  </div>
</div>

<style is:global>
  .hero {
    display: none !important;
  }
</style>
