---
import "../../styles/global.css";
/* src/components/InfoBox.astro */
const { title } = Astro.props;
---

<div class="mb-10 overflow-hidden rounded-lg border border-rose-200 bg-white shadow-sm">
  {
    title && (
      <div class="border-b border-rose-200 bg-rose-50 px-6 py-4">
        <h3 class="m-0 text-lg font-bold text-rose-800">{title}</h3>
      </div>
    )
  }
  <div class="px-6 py-5 text-gray-700 leading-7">
    <slot />
  </div>
</div>
