---
/* src/components/InfoBox.astro */
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="info-box not-content">
  <div class="info-header">
    {title}
  </div>
  <div class="info-content sl-markdown-content">
    <slot />
  </div>
</div>

<style>
  .info-box {
    background-color: #f3f4f6;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
    border: 1px solid #e5e7eb;
  }

  .info-header {
    background-color: #78081c; /* Brand Red */
    color: white;
    padding: 0.75rem 1.25rem;
    font-weight: 700;
    font-size: 1.05rem;
    letter-spacing: 0.025em;
  }

  .info-content {
    padding: 1.5rem;
    color: #374151;
  }

  .info-content :global(p) {
    margin-bottom: 1.25rem;
    line-height: 1.7;
  }

  .info-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .info-content :global(ul) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }
</style>
