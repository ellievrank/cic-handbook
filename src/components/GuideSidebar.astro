<style>
  .guide-sidebar {
    display: none;
  }

  @media (min-width: 1024px) {
    .guide-sidebar {
      display: block;
      width: 300px;
      flex-shrink: 0;
      font-size: 0.95rem;
    }
  }

  .sticky-box {
    position: sticky;
    top: 6rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    border-left: 2px solid #e5e7eb;
    padding-left: 1.5rem;
  }

  .sticky-box strong {
    color: #111827;
    font-weight: 800;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 1.1rem;
  }

  .sticky-box a {
    color: #4b5563;
    text-decoration: none;
    line-height: 1.5;
    transition: color 0.2s;
  }

  .sticky-box a:hover {
    color: #78081c;
    font-weight: 600;
  }
</style>
