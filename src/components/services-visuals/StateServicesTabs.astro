<style is:global>
  /* UX IMPROVEMENT: Force a visible scrollbar on the tabs specifically on mobile 
     so users know it scrolls horizontally.
  */
  @media (max-width: 768px) {
    starlight-tabs [role="tablist"] {
      scrollbar-width: thin; /* Firefox */
      scrollbar-color: #cbd5e1 transparent; /* Thumb Color / Track Color */
      padding-bottom: 4px; /* Space for scrollbar */
    }
    starlight-tabs [role="tablist"]::-webkit-scrollbar {
      height: 3px; /* Webkit height */
    }
    starlight-tabs [role="tablist"]::-webkit-scrollbar-thumb {
      background-color: #cbd5e1;
      border-radius: 10px;
    }
    starlight-tabs [role="tablist"]::-webkit-scrollbar-track {
      background: transparent;
    }
  }
</style>
