---
/* src/components/Footer.astro */
import DefaultFooter from "@astrojs/starlight/components/Footer.astro";
---

<DefaultFooter {...Astro.props} />

<div class="footer-wrapper-full">
  <footer class="custom-footer">
    <div class="footer-container">
      <div class="footer-brand">
        <img src="/book.png" alt="Logo" class="footer-logo" />
        <span class="brand-name">CIC Handbook</span>
      </div>

      <div class="footer-grid">
        <div class="footer-col">
          <h3>Acknowledgement</h3>
          <p>
            The CIC Handbook was produced on Whadjuk Noongar Boodjar, the lands
            of the Traditional Custodians in Perth, Western Australia. We pay
            our respects to Elders past and present and extend that respect to
            all Aboriginal and Torres Strait Islander peoples today. We
            acknowledge that sovereignty was never ceded.
          </p>
        </div>

        <div class="footer-col">
          <h3>About this guide</h3>
          <p>
            This handbook is a plain-language toolkit designed to help victims
            of crime navigate the Criminal Injuries Compensation process in
            Australia. It aims to reduce confusion and empower applicants with
            clear, accessible information.
          </p>
        </div>

        <div class="footer-col">
          <h3>Quick Links</h3>
          <ul class="footer-links">
            <li><a href="/">Home</a></li>
            <li><a href="/cic-guide">Western Australian Guide</a></li>
            <li><a href="/support-services">Support Services</a></li>
          </ul>
        </div>
      </div>

      <div class="footer-bottom">
        <div class="copyright">
          &copy; {new Date().getFullYear()} CIC Handbook WA.
        </div>
      </div>
    </div>
  </footer>
</div>

<style>
  .footer-wrapper-full {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;

    background-color: #f3f4f6;
    border-top: 5px solid #78081c;
    margin-top: 4rem;
  }

  .custom-footer {
    padding: 3rem 1.5rem 2rem;
    color: #374151;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2.5rem;
  }

  .footer-logo {
    height: 32px;
    width: auto;
  }

  .brand-name {
    font-size: 1.25rem;
    font-weight: 800;
    text-transform: uppercase;
    color: #111827;
    letter-spacing: 0.05em;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e7eb;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
  }

  .footer-col h3 {
    color: #78081c;
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .footer-col p {
    color: #4b5563;
    margin: 0;
    font-size: 0.9rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links li {
    margin: 0;
  }

  .footer-links a {
    color: #111827;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease-in-out;
    display: inline-block;
  }

  .footer-links a:hover {
    color: #78081c;
    transform: translateX(4px);
    text-decoration: none;
  }

  /* Bottom Section */
  .footer-bottom {
    display: flex;
    justify-content: flex-end;
    padding-top: 1.5rem;
  }

  .copyright {
    color: #9ca3af;
    font-size: 0.85rem;
  }
</style>
