---
/* src/components/layout/Footer.astro */
import "../../styles/global.css";
const currentYear = new Date().getFullYear();
---

{/* Full-width footer container */}
<footer
  class="relative left-[50%] right-[50%] -ml-[50vw] -mr-[50vw] w-screen bg-gray-50 border-t border-gray-200 mt-24"
>
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <div class="lg:flex lg:justify-between lg:items-start">
      {/* --- LEFT SECTION: Logo & Brand --- */}
      <div class="lg:w-1/3 mb-10 lg:mb-0">
        <a
          href="/"
          class="flex items-center gap-3 mb-6 text-gray-900 no-underline hover:opacity-80 transition"
        >
          <img src="/book.png" alt="CIC Handbook Logo" class="h-10 w-auto" />
          <span class="font-extrabold text-xl tracking-tight">CIC Handbook</span
          >
        </a>
        <p class="text-sm text-gray-500 leading-relaxed mb-6 max-w-sm">
          A plain-language guide to help you understand your rights and the
          criminal injuries compensation process.
        </p>
        <div class="text-xs text-gray-400">
          &copy; {currentYear} CIC Handbook.
        </div>
      </div>

      {/* --- RIGHT SECTION: Three Columns of Links --- */}
      {/* Changed to sm:grid-cols-3 to create the middle space */}
      <div
        class="lg:w-2/3 grid grid-cols-1 sm:grid-cols-3 gap-8 lg:gap-12 lg:justify-items-end"
      >
        {/* Column 1: CIC Guides (First 4) */}
        <div class="text-left w-full">
          <h3
            class="text-sm font-bold uppercase tracking-wider text-gray-900 mb-4"
          >
            CIC Guides
          </h3>
          <ul class="space-y-3 list-none p-0 m-0">
            <li>
              <a
                href="/wa-guide"
                class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
                >Western Australia</a>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >Victoria (Coming Soon)</span>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >New South Wales (Coming Soon)</span>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >Queensland (Coming Soon)</span>
            </li>
          </ul>
        </div>

        {/* Column 2: CIC Guides (Remaining 4) - The "Middle" Space */}
        <div class="text-left w-full">
          {/* Invisible header to keep alignment consistent with Column 1 */}
          <h3
            class="text-sm font-bold uppercase tracking-wider text-transparent select-none mb-4"
            aria-hidden="true"
          >
            More Guides
          </h3>
          <ul class="space-y-3 list-none p-0 m-0">
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >South Australia (Coming Soon)</span>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >Tasmania (Coming Soon)</span>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >Northern Territory (Coming Soon)</span>
            </li>
            <li>
              <span class="text-sm text-gray-400 cursor-default"
                >ACT (Coming Soon)</span>
            </li>
          </ul>
        </div>

        {/* Column 3: Other Links */}
        <div class="text-left w-full">
          <h3
            class="text-sm font-bold uppercase tracking-wider text-gray-900 mb-4"
          >
            Other Links
          </h3>
          <ul class="space-y-3 list-none p-0 m-0">
            <li>
              <a
                href="/"
                class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
                >Home</a>
            </li>
            <li>
              <a
                href="/support-services"
                class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
                >Support Services</a>
            </li>
            <li>
              <a
                href="/acknowledgements"
                class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
                >Acknowledgements</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
