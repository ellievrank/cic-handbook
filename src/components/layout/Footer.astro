---
import "../../styles/global.css";
const currentYear = new Date().getFullYear();
---

<footer
  class="relative left-[50%] right-[50%] -ml-[50vw] -mr-[50vw] w-screen bg-gray-50 border-t border-gray-200 mt-32 mb-0"
>
  <div class="mx-auto max-w-7xl px-6 pt-12 pb-12 lg:px-8">
    <div class="lg:flex lg:justify-between lg:items-start">
      <div class="lg:w-1/3 mb-10 lg:mb-0">
        <a
          href="/"
          class="flex items-center gap-3 mb-6 text-gray-900 no-underline hover:opacity-80 transition"
        >
          <img src="/book.png" alt="CIC Handbook Logo" class="h-10 w-auto" />
          <span class="font-extrabold text-xl tracking-tight">CIC Handbook</span
          >
        </a>
        <p class="text-sm text-gray-500 leading-relaxed mb-6 max-w-sm">
          A plain-language guide to help you understand your rights and the
          criminal injuries compensation process.
        </p>
        <div class="text-xs text-gray-400">
          &copy; {currentYear} CIC Handbook.
        </div>
      </div>

      <div class="lg:w-auto">
        <h3
          class="text-sm font-bold uppercase tracking-wider text-gray-900 mb-4 lg:text-right"
        >
          Helpful Links
        </h3>
        <ul class="space-y-3 list-none p-0 m-0 lg:text-right">
          <li>
            <a
              href="/"
              class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
              >Home</a>
          </li>
          <li>
            <a
              href="/#jurisdiction-grid"
              class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
              >CIC Guide</a>
          </li>
          <li>
            <a
              href="/support-services"
              class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
              >Support Services</a>
          </li>
          <li>
            <a
              href="/acknowledgements"
              class="text-sm text-gray-600 no-underline hover:text-[#78081c] transition-colors"
              >Acknowledgements</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<style is:global>
  html,
  body {
    height: 100%;
    overflow-x: hidden;
  }
  .page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .main-frame {
    flex: 1 0 auto;
  }
</style>
