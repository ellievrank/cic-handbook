---
import "../../styles/global.css";
import { LinkButton } from "@astrojs/starlight/components";
/* src/components/HomeCTA.astro */
---

<div
  class="mt-12 rounded-xl border border-rose-200 bg-rose-50 px-6 py-8 text-center"
>
  <h3 class="mt-0 text-xl font-extrabold text-[#78081c] mb-2">
    Need immediate help or support?
  </h3>
  <p class="mb-6 text-gray-600">Find confidential support services available in your area.</p>

  <LinkButton
    href="/support-services"
    variant="primary"
    icon="external"
    class="inline-flex items-center justify-center"
  >
    Explore Support Services
  </LinkButton>
</div>


